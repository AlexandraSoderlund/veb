@model webapp.Models.ProfileViewModel

<h2>Dina vänförfrågningar</h2>
<hr />

@foreach (var förfrågan in Model.FriendRequests)
{
    <div>
        <div class="bold mt10">
            @förfrågan.Avsändare
            @Html.ActionLink("Ja", "AcceptFriendRequest", "FriendsRequest", new { @friendRequestId = förfrågan.Id, }, new { @class = "btn btn-success" })
            @Html.ActionLink("Nej", "DeclineFriendRequest", "FriendsRequest", new { @friendRequestId = förfrågan.Id, }, new { @class = "btn btn-danger" })
        </div>
    </div>
}