@model webapp.Models.EditProfileViewModel

<h2>Kontoinställningar.</h2>
<hr />
<div>

    @using (Html.BeginForm("SaveProfile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="dejt-container">


        <h4>Profilbild</h4>
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img src="@Url.Content(Model.ProfileImageUrl)" class="profile-pic" />
        }
        else
        {
            <img src="~/bilder/noProfilePic.jpg" class="profile-pic" />
        }
        @Html.TextBoxFor(x => x.ProfileImage, new { Type = "File", @class = "mt10" })
        <h4>Namn</h4>
        @Html.TextBoxFor(x => x.Namn, new { @class = "form-control", @cols = "" })
        @Html.ValidationMessageFor(x => x.Namn, "", new { @class = "text-danger" })
        <h4> Favoritkaka </h4>
        @Html.TextBoxFor(x => x.Favoritkaka, new { @class = "form-control", @cols = "" })
        @Html.ValidationMessageFor(x => x.Favoritkaka, "", new { @class = "text-danger" })


        <h4> Beskrivning </h4>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @cols = "", @rows = 6 })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="submit" value="Spara" class="btn btn-primary pull-right mt10" />
            <div class="clearfix"></div>
        </div>
        <p class="text-success">@ViewBag.StatusMessage</p>
    </div>
    }
    <div class="mt10">
        @Html.ActionLink("Change your password", "ChangePassword")
    </div>


</div>
